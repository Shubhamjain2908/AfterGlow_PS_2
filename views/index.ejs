<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
  </head>
  <body>
  <script>
    $(document).ready(function () {

      $("#submitButton").click(function (event) {
        var value = document.getElementById('val').value;
        
            $.ajax({
                type: 'POST',
                url: "/addData",  // our controller
                data: {value: value},
      
                success : function(data) {
                    alert('Data successfully saved !!!');
                    // $("#btnDownload").css("display", "block");
                    // console.log(data);
                },
                error : function(err) {
                    console.log(err);
                }
            });
            
        });
      $("#fetchButton").click(function (event) {
        $.ajax({
          type: 'GET',
          url: '/fetchData',

          success : function (data) {
            $("#tableData").css("display", "block");
            console.log(data);

            $("#1_Id").html(data.Result[0]._id);
            $("#2_Id").html(data.Result[1]._id);
            $("#3_Id").html(data.Result[2]._id);
            $("#4_Id").html(data.Result[3]._id);
            $("#5_Id").html(data.Result[4]._id);
            $("#1_Value").html(data.Result[0].value);
            $("#2_Value").html(data.Result[1].value);
            $("#3_Value").html(data.Result[2].value);
            $("#4_Value").html(data.Result[3].value);
            $("#5_Value").html(data.Result[4].value);
          },
          error : function (err) {
            console.log(err);
            alert(err);
          }
        });
      });  
    });
  </script>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <form>
      <label for="data">Value:</label>
      <input type="text" class="form-control" id="val" placeholder="Enter value" name="val">
      <button type="button" class="btn btn-primary" id="submitButton">Submit</button>
    </form>
    <form>
        <button type="button" class="btn btn-primary btn-lg" id="fetchButton">Fetch Data</button>
      <div style="display: none;" class="table-responsive" id="tableData">
        <table class="table">
          <thead>
            <tr>
              <th>ID: </th>
              <th>Value</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td id="1_Id">1</td>
              <td id="1_Value">Anna</td>
            </tr>
            <tr>
              <td id="2_Id">1</td>
              <td id="2_Value">Anna</td>
            </tr>
            <tr>
              <td id="3_Id">1</td>
              <td id="3_Value">Anna</td>
            </tr>
            <tr>
              <td id="4_Id">1</td>
              <td id="4_Value">Anna</td>
            </tr>
            <tr>
              <td id="5_Id">1</td>
              <td id="5_Value">Anna</td>
            </tr>  
          </tbody>
        </table>
      </div>
    </form>
  </body>
</html>
